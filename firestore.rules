rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/customers/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/customers/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Products: Everyone can read, only admins can write
    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Customers: Users can read their own data, admins can read and write all
    match /customers/{customerId} {
      allow read: if isOwner(customerId) || isAdmin();
      allow update, delete: if isAdmin();
      allow create: if true; // Allow creation during registration
    }
    
    // Orders: Users can read their own orders, admins can read and write all
    match /orders/{orderId} {
      allow read: if isAuthenticated() && 
        (resource.data.customerId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }
    
    // Price Types: Everyone can read, only admins can write
    match /priceTypes/{priceTypeId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Translations: Everyone can read, only admins can write
    match /translations/{lang} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Partnership Applications: Anyone can create, only admins can read/update/delete
    match /partnershipApplications/{applicationId} {
      allow read, update, delete: if isAdmin();
      allow create: if true;
    }
    
    // Contact Messages: Anyone can create, only admins can read/update/delete
    match /contactMessages/{messageId} {
      allow read, update, delete: if isAdmin();
      allow create: if true;
    }
  }
}
